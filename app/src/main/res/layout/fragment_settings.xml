<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewClearFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Clear Favorites"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewClearDownloads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Clear Downloads"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/textViewClearAppData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Clear App Data"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textViewClearCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="16dp"
            android:text="Total App Cache"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewClearCacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="16dp"
            android:text="0"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
