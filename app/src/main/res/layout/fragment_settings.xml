<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignParentEnd="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewClearFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Clear Favorites"
        android:textColor="@color/white" />
    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="0.01dp"
        android:background="@color/colorAccent"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewClearFavorites"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewClearDownloads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Clear Downloads"
        android:textColor="@color/white" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="@color/colorAccent"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewClearDownloads"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewClearAppData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Clear App Data"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textViewClearCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="16dp"
            android:text="Total App Cache"
        />

        <TextView
            android:id="@+id/textViewClearCacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="16dp"
            android:text="0"
           />
    </LinearLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/textViewClearCacheSize"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/sourceCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_18sdp"
        android:clickable="true"
        android:weightSum="2"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/baseline_code_24" />

        <TextView
            android:id="@+id/githubCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1.5"
            android:padding="16dp"
            android:clickable="false"
            android:focusable="false"
            android:text="Source Code"
            android:textColor="@color/white" />
    </LinearLayout>
    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/githubCode"
        tools:ignore="MissingConstraints" />
</LinearLayout>
